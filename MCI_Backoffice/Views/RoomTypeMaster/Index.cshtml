@model IEnumerable<CheckinPortal.BackOffice.Models.RoomTypeMasterModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <link href="~/Assets/vendor/datatables/dataTables.bs4.css" rel="stylesheet" />
    <link href="~/Assets/vendor/datatables/dataTables.bs4-custom.css" rel="stylesheet" />
    <link href="~/Assets/vendor/datatables/buttons.bs.css" rel="stylesheet" />
}

<h2>Room Type List</h2>

<p>
    @Html.ActionLink("Add Room Types", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="fixedHeader" class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomTypeCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomTypeDescription)
            </th>
            <th class="right-align">Action</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoomTypeCode)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomTypeDescription)
                </td>
                <td class="right-align">
                    <div class="td-actions">
                        <a href="@Url.Action("Edit","RoomTypeMaster",new { id= item.RoomTypeID })" class="icon red" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit Record">
                            <i class="icon-edit"></i>
                        </a>
                        <a href="@Url.Action("Details","RoomTypeMaster",new { id= item.RoomTypeID })" class="icon green" data-toggle="tooltip" data-placement="top" title="" data-original-title="View Record">
                            <i class="icon-eye"></i>
                        </a>
                        <a href="@Url.Action("Delete","RoomTypeMaster",new { id= item.RoomTypeID })" class="icon blue" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete Record">
                            <i class="icon-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>

    }

</table>

@section Scripts{

    <script src="~/Assets/vendor/datatables/dataTables.min.js"></script>
    <script src="~/Assets/vendor/datatables/dataTables.bootstrap.min.js"></script>

    @*<script src="~/Assets/vendor/datatables/custom/custom-datatables.js"></script>*@
    <script src="~/Assets/vendor/datatables/custom/fixedHeader.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#fixedHeader').DataTable({
                fixedHeader: true,
                'iDisplayLength': 10,
                "language": {
                    "lengthMenu": "Display _MENU_ Records Per Page",
                    "info": "Showing Page _PAGE_ of _PAGES_",
                }
            });
        });

    </script>
}
