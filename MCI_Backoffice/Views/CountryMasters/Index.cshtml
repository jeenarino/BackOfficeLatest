@model IEnumerable<CheckinPortal.BackOffice.DataAccess.tbCountryMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <link href="~/Assets/vendor/datatables/dataTables.bs4.css" rel="stylesheet" />
    <link href="~/Assets/vendor/datatables/dataTables.bs4-custom.css" rel="stylesheet" />
    <link href="~/Assets/vendor/datatables/buttons.bs.css" rel="stylesheet" />
}

<h2>Country List</h2>

<p>
    @Html.ActionLink("New Country", "Create",null,new { @class="btn btn-primary"})
</p>
<table id="fixedHeader" class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country_Full_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country_3Char_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country_2Char_code)
            </th>
            <th class="right-align">Action</th>
        </tr>
    </thead>
  

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Country_Full_name)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country_3Char_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country_2Char_code)
                </td>
                <td class="right-align">
                    <div class="td-actions">
                        <a href="@Url.Action("Edit","CountryMasters",new { id= item.CountryMasterID })" class="icon red" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit Record">
                            <i class="icon-edit"></i>
                        </a>
                        <a href="@Url.Action("Details","CountryMasters",new { id= item.CountryMasterID })" class="icon green" data-toggle="tooltip" data-placement="top" title="" data-original-title="View Record">
                            <i class="icon-eye"></i>
                        </a>
                        <a href="@Url.Action("Delete","CountryMasters",new { id= item.CountryMasterID })" class="icon blue" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete Record">
                            <i class="icon-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
        
    }

</table>

@section Scripts{

    <script src="~/Assets/vendor/datatables/dataTables.min.js"></script>
    <script src="~/Assets/vendor/datatables/dataTables.bootstrap.min.js"></script>

    @*<script src="~/Assets/vendor/datatables/custom/custom-datatables.js"></script>*@
    <script src="~/Assets/vendor/datatables/custom/fixedHeader.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#fixedHeader').DataTable({
                fixedHeader: true,
                'iDisplayLength': 10,
                "language": {
                    "lengthMenu": "Display _MENU_ Records Per Page",
                    "info": "Showing Page _PAGE_ of _PAGES_",
                }
            });
        });

    </script>
}
