        <!-- Page content start  -->
        <div class="page-content">
            <div id="messages"></div>
            <div id="notes"></div>
            <!-- Main container start -->
            <div class="main-container">
                @RenderBody()
            </div>
            <!-- Main container end -->
        </div>
        <!-- Page content end -->
    </div>
    <!-- Page wrapper end -->
